{
  "include": ["vite.config.ts", "capacitor.config.ts", "config/env.ts"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "skipLibCheck": true,
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client", "jest"],
    "jsx": "react-jsx",

    "moduleResolution": "bundler",
    "module": "ESNext",
  }
}
